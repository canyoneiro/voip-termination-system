APP_NAME="VoIP Panel"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Madrid
APP_URL=http://localhost

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database - MariaDB
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=voip
DB_USERNAME=voip_user
DB_PASSWORD=

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# Cache - Redis
CACHE_STORE=redis
CACHE_PREFIX=voip_

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail - SMTP
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="voip@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Laravel Reverb (WebSockets)
REVERB_APP_ID=voip-panel
REVERB_APP_KEY=voip-panel-key
REVERB_APP_SECRET=voip-panel-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ===========================================
# VoIP System Settings (stored in database)
# ===========================================
# The following settings are configured via the web panel
# and stored in the system_settings table:
#
# Telegram Notifications:
#   notifications.telegram_bot_token
#   notifications.telegram_admin_chat_ids
#   notifications.telegram_enabled
#
# Email Notifications:
#   notifications.smtp_host
#   notifications.smtp_port
#   notifications.smtp_user
#   notifications.smtp_pass
#   notifications.admin_emails
#
# Security:
#   security.flood_threshold (default: 50 CPS)
#   security.blacklist_duration (default: 3600 seconds)
#   security.whitelist_ips
#
# Limits:
#   limits.global_max_cps
#   limits.global_max_channels
#
# Alerts:
#   alerts.min_asr_global (default: 40%)
#   alerts.channels_warning_pct (default: 80%)
#   alerts.minutes_warning_pct (default: 80%)
#   alerts.options_timeout (default: 90 seconds)
#
# Retention:
#   retention.cdr_days (default: 90)
#   retention.traces_days (default: 7)
#   retention.alerts_days (default: 30)
#   retention.audit_days (default: 90)
#
# SIP:
#   sip.listen_port (default: 5060)
#   sip.options_interval (default: 30 seconds)
#   sip.transaction_timeout (default: 32 seconds)
#   sip.user_agent
