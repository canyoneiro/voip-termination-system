<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE scenario SYSTEM "sipp.dtd">

<!-- UAS Loopback Scenario - Simulates a carrier that answers calls -->
<scenario name="UAS Loopback - Answer and Hold">

  <!-- Wait for INVITE -->
  <recv request="INVITE" crlf="true"/>

  <!-- Send 100 Trying -->
  <send>
    <![CDATA[
      SIP/2.0 100 Trying
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0

    ]]>
  </send>

  <!-- Wait a bit, then send 180 Ringing -->
  <pause milliseconds="100"/>

  <send>
    <![CDATA[
      SIP/2.0 180 Ringing
      [last_Via:]
      [last_From:]
      [last_To:];tag=[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:[local_ip]:[local_port];transport=[transport]>
      Content-Length: 0

    ]]>
  </send>

  <!-- Wait a bit more, then send 200 OK with SDP -->
  <pause milliseconds="200"/>

  <send retrans="500">
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:[local_ip]:[local_port];transport=[transport]>
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=sipp 12345 12345 IN IP[local_ip_type] [local_ip]
      s=SIPp Loopback
      c=IN IP[local_ip_type] [local_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 8 0
      a=rtpmap:8 PCMA/8000
      a=rtpmap:0 PCMU/8000
      a=ptime:20
      a=sendrecv

    ]]>
  </send>

  <!-- Receive ACK -->
  <recv request="ACK" crlf="true" timeout="5000"/>

  <!-- Hold the call for 3 seconds -->
  <pause milliseconds="3000"/>

  <!-- Wait for BYE -->
  <recv request="BYE" crlf="true"/>

  <!-- Respond to BYE with 200 OK -->
  <send>
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0

    ]]>
  </send>

  <!-- Response timeout management -->
  <ResponseTimeRepartition value="10, 20, 30, 40, 50, 100, 150, 200"/>

  <!-- Call length repartition for statistics -->
  <CallLengthRepartition value="10, 50, 100, 500, 1000, 5000, 10000"/>

</scenario>
