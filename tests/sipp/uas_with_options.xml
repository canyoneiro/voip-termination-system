<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE scenario SYSTEM "sipp.dtd">

<!-- UAS that responds to both OPTIONS and INVITE -->
<scenario name="UAS with OPTIONS support">

  <!-- Wait for any request -->
  <recv request=".*" regexp_match="true" crlf="true">
    <action>
      <ereg regexp="(OPTIONS|INVITE)" search_in="msg" assign_to="method"/>
    </action>
  </recv>

  <!-- Branch based on method -->
  <nop>
    <action>
      <strcmp assign_to="is_options" variable="method" value="OPTIONS"/>
    </action>
  </nop>

  <!-- If OPTIONS, send 200 OK and done -->
  <send next="end" test="is_options" chance="0">
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Allow: INVITE,ACK,BYE,CANCEL,OPTIONS
      Accept: application/sdp
      Content-Length: 0

    ]]>
  </send>

  <!-- If INVITE, handle the call -->
  <!-- Send 100 Trying -->
  <send>
    <![CDATA[
      SIP/2.0 100 Trying
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0

    ]]>
  </send>

  <pause milliseconds="100"/>

  <!-- Send 180 Ringing -->
  <send>
    <![CDATA[
      SIP/2.0 180 Ringing
      [last_Via:]
      [last_From:]
      [last_To:];tag=[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:[local_ip]:[local_port];transport=[transport]>
      Content-Length: 0

    ]]>
  </send>

  <pause milliseconds="200"/>

  <!-- Send 200 OK with SDP -->
  <send retrans="500">
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sip:[local_ip]:[local_port];transport=[transport]>
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=sipp 12345 12345 IN IP[local_ip_type] [local_ip]
      s=SIPp Loopback
      c=IN IP[local_ip_type] [local_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 8 0
      a=rtpmap:8 PCMA/8000
      a=rtpmap:0 PCMU/8000
      a=ptime:20
      a=sendrecv

    ]]>
  </send>

  <!-- Receive ACK -->
  <recv request="ACK" crlf="true" timeout="5000"/>

  <!-- Hold the call -->
  <pause milliseconds="3000"/>

  <!-- Wait for BYE -->
  <recv request="BYE" crlf="true"/>

  <!-- Respond to BYE -->
  <send>
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0

    ]]>
  </send>

  <label id="end"/>

</scenario>
